@page
@model ThemeParkDatabase.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h3 class="box-title">Employee - Details</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <!-- // content -->
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Employee.FirstName)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.FirstName)</dd>
            <dt>@Html.DisplayNameFor(model => model.Employee.MiddleInitial)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.MiddleInitial)</dd>
            <dt>@Html.DisplayNameFor(model => model.Employee.LastName)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.LastName)</dd>
            <dt>@Html.DisplayNameFor(model => model.Employee.Title)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.Title)</dd>
            <dt>@Html.DisplayNameFor(model => model.Employee.HireDate)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.HireDate)</dd>
            <dt>@Html.DisplayNameFor(model => model.Employee.Salary)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.Salary)</dd>
            <dt>@Html.DisplayNameFor(model => model.Employee.Department)</dt>
            <dd>@Html.DisplayFor(model => model.Employee.Department.Name)</dd>
        </dl>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
          <a asp-page="./Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
          <a asp-page="./Index">Back to List</a>
      </div>
    </div>
    <!-- /.box -->
  </div>
  <!-- ./col -->
</div>
<!-- /.row -->
