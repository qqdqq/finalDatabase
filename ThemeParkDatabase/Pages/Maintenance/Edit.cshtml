@page
@model ThemeParkDatabase.Pages.Maintenance.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h3 class="box-title">Edit</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaintenanceRequest.Id" />
            <div class="form-group">
                <label asp-for="MaintenanceRequest.Description" class="control-label"></label>
                <input asp-for="MaintenanceRequest.Description" class="form-control" />
                <span asp-validation-for="MaintenanceRequest.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceRequest.DateRequested" class="control-label"></label>
                <input asp-for="MaintenanceRequest.DateRequested" class="form-control" />
                <span asp-validation-for="MaintenanceRequest.DateRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceRequest.DateResolved" class="control-label"></label>
                <input asp-for="MaintenanceRequest.DateResolved" class="form-control" />
                <span asp-validation-for="MaintenanceRequest.DateResolved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceRequest.CurrentStatus" class="control-label"></label>
                <input asp-for="MaintenanceRequest.CurrentStatus" class="form-control" />
                <span asp-validation-for="MaintenanceRequest.CurrentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceRequest.EstimatedCost" class="control-label"></label>
                <input asp-for="MaintenanceRequest.EstimatedCost" class="form-control" />
                <span asp-validation-for="MaintenanceRequest.EstimatedCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- <label asp-for="MaintenanceRequest.AttractionId" class="control-label"></label> -->
                <label class="control-label">Attraction</label>
                <select asp-for="MaintenanceRequest.AttractionId" class="form-control" asp-items="ViewBag.AttractionId"></select>
                <span asp-validation-for="MaintenanceRequest.AttractionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
          <a asp-page="./Index">Back to List</a>
      </div>
    </div>
    <!-- /.box -->
  </div>
  <!-- ./col -->
</div>
<!-- /.row -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
