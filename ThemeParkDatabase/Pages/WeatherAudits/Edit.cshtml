            </div>
            <div class="form-group">
                <label asp-for="WeatherAudit.Temperature" class="control-label"></label>
                <input asp-for="WeatherAudit.Temperature" class="form-control" />
                <span asp-validation-for="WeatherAudit.Temperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeatherAudit.InchesPrecipitation" class="control-label"></label>
                <input asp-for="WeatherAudit.InchesPrecipitation" class="form-control" />
                <span asp-validation-for="WeatherAudit.InchesPrecipitation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeatherAudit.Date" class="control-label"></label>
                <input asp-for="WeatherAudit.Date" class="form-control" />
                <span asp-validation-for="WeatherAudit.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
