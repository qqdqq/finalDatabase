    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>WeatherAudit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WeatherAudit.WeatherAuditId" class="control-label"></label>
                <input asp-for="WeatherAudit.WeatherAuditId" class="form-control" />
